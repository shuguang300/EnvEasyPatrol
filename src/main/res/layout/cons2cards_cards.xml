<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/cons2cards_cards_bg" >

    <RelativeLayout
        android:id="@+id/cons2cards_cards_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/cons2cards_cards_remind_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cons2cards_card_img" />

        <TextView
            android:id="@+id/cons2cards_cards_remind_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_toRightOf="@id/cons2cards_cards_remind_logo"
			android:layout_alignParentBottom="true"
			android:layout_marginLeft="-15dp"
			android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/xx_small"
            android:background="@drawable/cons2cards_cards_remind_count" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/cons2cards_cards_logo"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/cons2cards_cards_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/cons2cards_cards_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progressDrawable="@drawable/progressbar_horizontal_blue" />

            <TextView
                android:id="@+id/cons2cards_cards_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:layout_marginRight="5dp"
                android:textSize="@dimen/normal" />
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>